<!--                android:textColor="@color/white"-->
<!--                android:textSize="20sp"/>-->
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>
    <!-- TODO:下拉刷新-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- TODO:书籍详细信息部分 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:orientation="horizontal">
            <!-- TODO:书籍封面图片 -->
            <ImageView
                android:id="@+id/bd_bookDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.example.activity.component.RoundImageView
                android:id="@+id/bd_bookImg"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="start"
                android:scaleType="fitXY" />
            <!-- TODO:右边书名作者名类型 -->
            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="6dp"
                android:layout_gravity="end"
                android:orientation="vertical"
                android:paddingStart="6dp"
                android:layout_toRightOf="@+id/bd_bookImg">
                <!-- TODO:书籍id不显示 -->
                <TextView
                    android:id="@+id/bd_bookId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
                <!-- TODO:书籍名 -->
                <TextView
                    android:id="@+id/bd_bookName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:textStyle="bold" />
                <!-- TODO:书籍作者名 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/bd_authorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:maxLines="1"
                        android:drawableEnd="@drawable/ic_arrow_right_16"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- TODO:书籍类型名 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:id="@+id/bd_typeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/bd_typeName_span"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:text="@string/split"
                        android:textColor="@color/lightGray"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/bd_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGray"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:orientation="vertical"
            android:layout_marginTop="-16dp"
            android:background="@drawable/corner_radius">
            <!-- TODO:书籍简介栏 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ECF0F0"
                    android:padding="3dp">
                    <TextView
                        android:id="@+id/bd_intro_span"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"
                        android:text="@string/detail_intro"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/bd_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:minLines="3"/>
            </LinearLayout>
            <!-- TODO:书籍目录栏 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ECF0F0"
                    android:padding="3dp">
                    <TextView
                        android:id="@+id/bd_catalog_span"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:text="@string/detail_catalog"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/bd_catalog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView >
</LinearLayout>